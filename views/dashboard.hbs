<h6>Dashboard</h6>
<h3>Welcome {{name}}</h3>
<p>Here are your stories.</p>

{{#if stories}}
<table class="striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each stories}}
            <tr>
            <th><a href="/stories/{{id}}">{{title}}</a></th>
            <th>{{formatDate createdAt 'MMMM Do YYYY, h:mm:ss a'}}</th>
            <th><span class="dash-status">{{status}}</span></th>
            <th></th>
        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
<p>You have not created any stories yet.</p>
{{/if}}